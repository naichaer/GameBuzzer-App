<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77ccae"
    android:orientation="vertical"
    tools:context="com.example.hong8.as1.inf_reaction_time">

    <TextView
        android:text="How to test reaction time?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="#ccc74c"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="50sp"
        android:gravity="center"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#996633"
        android:textSize="25sp"
        android:text="press the button as soon as possible when it turns green from red and your reaction time will be recorded"
        android:layout_gravity="center"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Caution: waiting time can be quite short!"
        android:layout_marginBottom="70sp"
        android:textColor="#996633"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <Button
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:layout_gravity="center"
        android:id="@+id/start_reaction"/>

</LinearLayout>
