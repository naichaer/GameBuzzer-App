<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#77ccae"
    tools:context="com.example.hong8.as1.statisics_reaction_time">

    <TextView
        android:text="Your reaction time is:"
        android:textSize="30sp"
        android:textColor="#ccc74c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="#996633"
        android:layout_marginBottom="10sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/count"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#996633"
        android:layout_marginBottom="10sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/best"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#996633"
        android:layout_marginBottom="40sp"
        />


    <Button
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="More Statistics"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:id="@+id/more_statistics"
        />


    <Button
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:id="@+id/restart_reaction"
        />

    <Button
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:id="@+id/quit_reaction"
        />

</LinearLayout>
