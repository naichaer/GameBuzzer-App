<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#77ccae"
    android:orientation="vertical"
    tools:context="com.example.hong8.as1.more_stat_reaction">

    <TextView
        android:layout_marginTop="20sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Minimum reaction time :"
        android:textColor="#ccc74c"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="overall:"
        android:textColor="#996633"
        android:textSize="17sp"
        android:id="@+id/min"/>

    <TextView
        android:layout_marginTop="10sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Maximum reaction time :"
        android:textColor="#ccc74c"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="overall:"
        android:textColor="#996633"
        android:textSize="17sp"
        android:id="@+id/max"/>

    <TextView
        android:layout_marginTop="10sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Average reaction time :"
        android:textColor="#ccc74c"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="overall:"
        android:textColor="#996633"
        android:textSize="17sp"
        android:id="@+id/average"/>

    <TextView
        android:layout_marginTop="10sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Median reaction time :"
        android:textColor="#ccc74c"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="overall:"
        android:textColor="#996633"
        android:textSize="17sp"
        android:id="@+id/median"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email statistics"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:id="@+id/email_result"/>


</LinearLayout>
